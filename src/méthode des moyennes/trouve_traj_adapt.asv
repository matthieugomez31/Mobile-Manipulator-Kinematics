function traj_adapt = trouve_traj_adapt(traj_chariot, traj_point, L1, L1bis, L2) 
    traj_adapt = zeros(length(traj_chariot), 2); % Initialise une matrice traj_adapt
    for i = 1:length(traj_chariot)
        % Appelle la fonction trouve_pos_ang et stocke le résultat dans traj_adapt
        [x, y] = trouve_pos_ang(traj_chariot(i,1), 0.077, traj_point(i,1), traj_point(i,3), L1, L1bis, L2);
        traj_adapt(i, :) = [x, y]; % Remplit traj_adapt avec les résultats
    end
end

